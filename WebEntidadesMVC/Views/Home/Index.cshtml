@model IngresoViewModel

<h2>Iniciar sesión</h2>

<form asp-action="Login" method="post">
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="Correo"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Clave"></label>
            <input asp-for="Clave" class="form-control" type="password" />
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3 mt-3">
        <button type="submit" style="width: 100%" class="btn btn-primary">Iniciar sesión</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
