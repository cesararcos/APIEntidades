@model RegisterViewModel
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h2>Registrar usuario</h2>

<form asp-action="Register" method="post">
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="Correo"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Clave"></label>
            <input asp-for="Clave" class="form-control" type="password" />
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Usuario"></label>
            <input asp-for="Usuario" class="form-control" />
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3 mt-3">
        <button type="submit" style="width: 100%" class="btn btn-success">Crear</button>
    </div>
    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}